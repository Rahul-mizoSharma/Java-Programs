import java.util.Scanner;
public class GenesisDestruction {
	public static void main(String [] args) {
		
		
		Scanner sc =new Scanner(System.in);
		
		System.out.print("Enter the number: ");
		int num;
		int rem;
		int sum=0;
		num = sc.nextInt();
		
		while(num!=0) {
			rem = num % 10;
			sum = sum + rem;
			num = num/10;
		}
		System.out.println(sum);
	
	}

}
