public class NumberPattern {
	public static void main(String [] args) {
		
		int i, j;
		int n=7;
		
		
		for(i=1; i<=n; i++) {
			for(j=1; j<=n; j++) {
				if( i==1|| i==7 || j==1 || j==7) {	
				System.out.print("* ");
			}
				else if (i==6 || j==6){
					System.out.print("  ");
				}
				else {
					System.out.print("* ");
				}
			}
			System.out.println();
		}
	}

}
